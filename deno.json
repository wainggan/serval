{
	"compilerOptions": {
		"strict": true,
		
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": true,
		
		"jsx": "react",
		"jsxFactory": "jsx",
		"jsxFragmentFactory": "fragment"
	},
	"tasks": {
		"run": "deno check && deno run --allow-net --allow-read --allow-write src/main.ts",
		"dev": "deno run --allow-net --allow-read --allow-write --check=all --watch src/main.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/http": "jsr:@std/http@^1.0.23"
	},
	"lint": {
		"rules": {
			"exclude": [
				"jsx-key",
				"require-await",
				"ban-types"
			]
		}
	}
}
